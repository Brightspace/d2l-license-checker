    "spdx": "0.5.1",
    "spdx-satisfies": "0.1.3",
    "yargs": "7.1.0"
  },
  "devDependencies": {
    "@d2l/eslint-config-aurora": "0.1.1",
    "@d2l/license-checker-ci": "^2.0.0",
    "chai": "4.0.0",
    "eslint": "3.19.0",
    "mocha": "3.4.2",
    "pre-commit": "1.2.2"
  },
  "pre-commit": [
    "lint"
  ]
}
