{
  "name": "@d2l/license-checker-ci",
  "version": "2.0.8",
  "description": "Simple tool to continuously check licenses of all npm dependencies in a project",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/license-checker-ci"
  },
  "scripts": {
    "license-check": "license-checker-ci",
    "lint": "eslint lib/** bin/** test/*",
