{
  "name": "d2l-license-checker",
  "version": "6.0.4",
  "description": "Simple tool to check licenses of all npm dependencies in a project",
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/d2l-license-checker"
  },
  "license": "MIT",
  "bin": {
    "d2l-license-checker": "./bin/d2l-license-checker",
    "license-checker-ci": "./bin/license-checker-ci"
  },
  "files": [
    "/bin",
    "/config",
    "/lib"
  ],
  "scripts": {
    "fix": "npm run fix:eslint",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "license-check": "node bin/d2l-license-checker",
    "lint": "npm run lint:eslint && npm run lint:editorconfig",
    "lint:editorconfig": "editorconfig-checker",
    "lint:eslint": "eslint .",
    "test": "npm run lint && npm run test:unit && npm run license-check",
    "test:unit": "mocha --timeout 120000"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "license-checker": "^25",
    "lodash": "^4",
    "semver": "^7",
    "spdx-license-ids": "^3",
    "spdx-satisfies": "^6",
    "yargs": "^18"
  },
  "devDependencies": {
    "@eslint/compat": "^2",
    "chai": "^6",
    "editorconfig-checker": "^6",
    "eslint": "^10",
    "eslint-config-brightspace": "^2",
    "eslint-plugin-json": "^4",
    "eslint-plugin-mocha": "^11",
    "mocha": "^11",
    "pre-commit": "^1"
  },
  "engines": {
    "node": ">=20"
  }
}
